doctype html
html(ng-app='JSONedit')
    head
        script(src='bower_components/jquery/dist/jquery.min.js')
        script(src='bower_components/jquery-ui/jquery-ui.min.js')
        script(src='bower_components/angular/angular.min.js')
        script(src='bower_components/angular-ui-sortable/sortable.min.js')
        link(href='bower_components/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet', type='text/css')
        script(src='js/directives.js')
        script(src='js/JSONedit.js')
        link(href='css/styles.css', rel='stylesheet', type='text/css')
    body
        a(href='https://github.com/mb21/JSONedit')
            img(style='position: absolute; top: 0; left: 0; border: 0;', src='https://s3.amazonaws.com/github/ribbons/forkme_left_red_aa0000.png', alt='Fork me on GitHub')

        #mainView(ng-controller='MainViewCtrl')
            h2 JSONedit
            .jsonView
                json(child='jsonData', default-collapsed='false', type='object')
            hr
            div
                textarea#jsonTextarea(ng-model='jsonString')
                span.red(ng-if='!wellFormed') JSON not well-formed!
            button(data-file='') Save

        - var jsonString = JSON.stringify(jsonContent)
        script.
            var jsonToEdit = !{jsonString};
